<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zhimeng.loupanguanli"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="19" />

    <!-- 读取SDCard的权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <!-- Android单元测试 -->
    <instrumentation
        android:name="android.test.InstrumentationTestRunner"
        android:targetPackage="com.zhimeng.loupanguanli" >
    </instrumentation>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen" >
        <uses-library android:name="android.test.runner" />

        <activity
            android:name="com.zhimeng.loupanguanli.activities.WelcomeActivity"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.zhimeng.loupanguanli.activities.MainActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.zhimeng.loupanguanli.activities.CreateLouPanActivity"
            android:screenOrientation="landscape"
            android:theme="@style/MDialog" >
        </activity>
        <activity
            android:name="com.zhimeng.loupanguanli.activities.CreateLouDongActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.zhimeng.loupanguanli.activities.PantoDongActivity"
            android:screenOrientation="landscape" >
        </activity>
    </application>

</manifest>